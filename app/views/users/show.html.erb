<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">職業</th>
            <td class="table__col2"><%= @user.profession %></td>
          </tr>
          <tr>
            <th class="table__col1">足のサイズ</th>
            <td class="table__col2"><%= @user.size %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんのレシピ"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'recipes/recipe', collection: @user.recipes %>
      </div>
    </div>
  </div>
</div>