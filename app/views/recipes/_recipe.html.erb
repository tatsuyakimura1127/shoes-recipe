<div class="card">
  <%= link_to image_tag(recipe.image, class: :card__img ), recipe_path(recipe) %>
  <div class="card__body">
    <%= link_to recipe.title, recipe_path(recipe), class: :card__title%>
    <p class="card__summary">
      <%= recipe.cream %>
    </p>
    <%= link_to "by #{recipe.user.name}", user_path(recipe.user), class: :card__user %>
  </div>
</div>